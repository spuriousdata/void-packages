# Template file for 'libbson'
pkgname=libbson
version=1.8.0
revision=1
build_style=gnu-configure
hostmakedepends="perl automake libtool"
short_desc="The BSON serialization library"
maintainer="Juan RP <xtraeme@voidlinux.eu>"
license="Apache-2.0"
homepage="https://github.com/mongodb/libbson"
distfiles="https://github.com/mongodb/libbson/archive/${version}.tar.gz"
checksum=36ab53f7be8c3d4f788ee822fe5c61ca06297d8fd6da289b00c2243cb8e7ed47

pre_configure() {
	NOCONFIGURE=1 ./autogen.sh
}

libbson-devel_package() {
	short_desc+=" - development files"
	depends="${sourcepkg}>=${version}_${revision}"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/*.so
		vmove usr/lib/pkgconfig
	}
}
